<div class="page-content page-thin">
  <%= render partial: 'shared/page_title_caption', object: '培训班教材' %>

  <table class="ui padded table segment">
    <thead>
    <tr>
      <th>名称</th>
      <th colspan="2"></th>
    </tr>
    </thead>

    <tbody>
    <% @text_books.each do |text_book| %>
        <tr>
          <td><%= text_book.name %></td>

          <td><%= link_to '修改', edit_text_book_path(text_book), {class:"btn btn-primary"}%></td>
          <td><%= link_to '删除', text_book, {class:"btn btn-danger", method: :delete, data: {confirm: '确认删除?'}} %></td>
        </tr>
    <% end %>
    </tbody>
  </table>

  <br>


    <%= link_to '新建 SAT 培训教材', new_text_book_path(exam_type: 'SAT'), {class:"btn btn-primary"} %>

    <%= link_to '新建 TOEFL 培训教材', new_text_book_path(exam_type: 'TOEFL'), {class:"btn btn-primary"} %>


</div>